generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  password  String
  name      String
  pfp       String?
  rooms     Room[]
  chats     Chat[]
}

model Room {
  id        Int         @id @default(autoincrement())
  slug      String      @unique
  createdAt DateTime    @default(now())
  adminId   String
  admin     User        @relation(fields: [adminId], references: [id])
  chats     Chat[]
}

model Chat {
  id        Int         @id @default(autoincrement())
  roomId    Int
  message   String  // string but json {type: "rect", x: 10, y: 10, width: 100, height: 100}
  userId    String
  room      Room        @relation(fields: [roomId], references: [id])
  user      User        @relation(fields: [userId], references: [id])
}
